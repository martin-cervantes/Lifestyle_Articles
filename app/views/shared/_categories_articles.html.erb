<% counter = 1 %>
<% @articles.each do |article| %>
  <% if counter == 1 || counter == 2%>
      <article class="article">
          <div class="article_img" style='background-image: url("<%= article.image %>");'></div>

          <div class="article_data">
              <i class="like fas fa-thumbs-up"></i>

              <h2 class="article_title"><%= article.title %></h2>

              <p class="article_text"><%= article.text %></p>

              <h3 class="article_author"><%= article.author.name %></h3>
          </div>
      </article>
  <% elsif counter == 3 || counter == 4 %>
      <article class="article">
          <div class="article_data">
              <i class="like fas fa-thumbs-up"></i>

              <h2 class="article_title"><%= article.title %></h2>

              <p class="article_text"><%= article.text %></p>

              <h3 class="article_author"><%= article.author.name %></h3>
          </div>

          <div class="article_img" style='background-image: url("<%= article.image %>");'></div>
      </article>
  <% end %>

  <% counter += 1 %>
  <% counter = 1 if counter == 5 %>
<% end %>

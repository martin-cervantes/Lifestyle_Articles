<%= form_for @article do |f| %>
  <div class="form-group">
    <%= f.text_field :title, placeholder: 'Article name here', class: 'form-control', autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.text_area :text, placeholder: 'Article details here', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.text_field :image, placeholder: 'Article name here', class: 'form-control' %>
  </div>

  <%= f.submit "Save Article", class: 'btn btn-primary' %>
  <%= link_to 'Cancel', user_path(current_user), class: 'btn btn-danger' %>
<% end %>

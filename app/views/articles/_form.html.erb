<%= form_for @article do |f| %>
  <%= f.label :title, 'Title', class: 'label' %>
  <%= f.text_field :title, autofocus: true %>

  <%= f.label :text, 'Text', class: 'label' %>
  <%= f.text_area :text %>

  <%= f.label :image, 'Image Url', class: 'label' %>
  <%= f.url_field :image %>

  <%= fields_for :categories do |f1| %>
    <%= label_tag 'category_name', 'Catergory', class: 'label' %>
    <%= f1.select :category_name, options_for_select(['Business', 'Entertainment', 'Fashion', 'Sports']) %>
  <% end %>

  <%= f.button :button, type: :submit, class: 'button guardar' do %><i class='fas fa-plus-circle'></i> Save<% end %>
  <%= link_to user_path(current_user), class: 'button cancelar' do %><i class='far fa-window-close'></i> Cancel<% end %>
<% end %>
